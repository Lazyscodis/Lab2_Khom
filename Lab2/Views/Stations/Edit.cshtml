@model Lab2.Models.StationModel

@{
    ViewData["Title"] = "Редактировать станцию";
}

<div class="container mt-5">
    <h2 class="mb-4">Редактировать станцию</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Name">Название</label>
            <input type="text" class="form-control" asp-for="Name" required>
        </div>
        <div class="form-group">
            <label for="City">Город</label>
            <input type="text" class="form-control" asp-for="City" required>
        </div>
        <div class="form-group">
            <label for="Schedule">Расписание</label>
            <input type="text" class="form-control" asp-for="Schedule" required>
        </div>
        <div class="form-group">
            <label for="Platforms">Количество платформ</label>
            <input type="number" class="form-control" asp-for="Platforms" required>
        </div>
        <div class="form-group">
            <label for="OpeningYear">Год открытия</label>
            <input type="number" class="form-control" asp-for="OpeningYear" required>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary mx-2">Сохранить</button>
            <a href="@Url.Action("Index", "Stations")" class="btn btn-secondary mx-2">Отмена</a>
        </div>
    </form>
</div>
