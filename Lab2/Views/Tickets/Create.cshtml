@model Lab2.Models.TicketModel

@{
    ViewData["Title"] = "Добавить билет";
}

<div class="container mt-5">
    <h2 class="mb-4">Добавить новый билет</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Route" class="control-label">Маршрут</label>
            <input asp-for="Route" class="form-control" />
            <span asp-validation-for="Route" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Class" class="control-label">Класс</label>
            <input asp-for="Class" class="form-control" />
            <span asp-validation-for="Class" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StationId" class="control-label">Станция</label>
            <select asp-for="StationId" class="form-control" asp-items="ViewBag.Stations">
                <option value="">Выберите станцию</option>
            </select>
            <span asp-validation-for="StationId" class="text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary mx-2">Сохранить</button>
            <a asp-action="Index" class="btn btn-secondary mx-2">Отмена</a>
        </div>
    </form>
</div>
