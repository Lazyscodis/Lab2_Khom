@model Lab2.Models.TicketModel

@{
    ViewData["Title"] = "Удалить билет";
}

<div class="container mt-5">
    <h2 class="mb-4">Удалить билет</h2>

    <div>
        <h3>Вы уверены, что хотите удалить этот билет?</h3>
        <dl class="row">
            <dt class="col-sm-2">Маршрут</dt>
            <dd class="col-sm-10">@Model.Route</dd>
            <dt class="col-sm-2">Класс</dt>
            <dd class="col-sm-10">@Model.Class</dd>
            <dt class="col-sm-2">Цена</dt>
            <dd class="col-sm-10">@Model.Price</dd>
            <dt class="col-sm-2">Станция</dt>
            <dd class="col-sm-10">@Model.Station?.Name</dd>
        </dl>

        <form action="@Url.Action("DeleteConfirmed", "Tickets", new { id = Model.Id })" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger mx-2">Удалить</button>
                <a href="@Url.Action("Index", "Tickets")" class="btn btn-secondary mx-2">Отмена</a>
            </div>
        </form>
    </div>
</div>
