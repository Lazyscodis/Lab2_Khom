@model IEnumerable<Lab2.Models.StationModel>

@{
    ViewData["Title"] = "Список станций";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Список станций</h1>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Название</th>
            <th>Город</th>
            <th>Расписание</th>
            <th>Количество платформ</th>
            <th>Год открытия</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var station in Model)
        {
            <tr>
                <td>@station.Name</td>
                <td>@station.City</td>
                <td>@station.Schedule</td>
                <td>@station.Platforms</td>
                <td>@station.OpeningYear</td>
                <td>
                    <a href="@Url.Action("Edit", "Stations", new { id = station.Id })" class="btn btn-warning mx-2">Редактировать</a>
                    <a href="@Url.Action("Delete", "Stations", new { id = station.Id })" class="btn btn-danger mx-2">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Stations")" class="btn btn-primary">Добавить станцию</a>
    </div>
</div>
